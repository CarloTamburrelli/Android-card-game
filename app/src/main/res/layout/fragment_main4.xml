<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <!-- The main content view -->

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:background="#000000"
        tools:context="com.example.app.seconda$PlaceholderFragment">

        <TableLayout xmlns="http://schemas.android.com/apk/res/android"
            android:id="@+id/tableLayout1"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <!-- 2 columns -->

            <!-- edittext span 2 column -->
            <TableRow
                android:id="@+id/tableRow1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="58"
                android:layout_marginBottom="4dp"
                android:background="#663300">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="4dp"
                        android:layout_weight="48"
                        android:id="@+id/bot0"
                        />
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="4dp"
                        android:layout_weight="48"
                        android:id="@+id/bot1"
                        />
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="4dp"
                        android:layout_weight="48"
                        android:id="@+id/bot2"
                        />
                </LinearLayout>


            </TableRow>
            <TableRow
                android:id="@+id/tableRow2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="58"
                android:layout_marginBottom="4dp"
                android:background="#663300">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="4dp"
                        android:layout_weight="48"
                        android:id="@+id/bot3"
                        />
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="4dp"
                        android:layout_weight="48"
                        android:id="@+id/bot4"
                        />
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="4dp"
                        android:layout_weight="48"
                        android:id="@+id/bot5"
                        />

                </LinearLayout>



            </TableRow>
            <TableRow
                android:id="@+id/tableRow3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="58"
                android:layout_marginBottom="4dp"
                android:background="#663300">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="4dp"
                        android:layout_weight="48"
                        android:id="@+id/bot6"
                        />
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="4dp"
                        android:layout_weight="48"
                        android:id="@+id/bot7"
                        />
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="4dp"
                        android:layout_weight="48"
                        android:id="@+id/bot8"
                        />

                </LinearLayout>

            </TableRow>
            <TableRow
                android:id="@+id/tableRow4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="9"
                android:background="#663300">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:id="@+id/cartee"
                    android:layout_height="fill_parent"
                    android:layout_weight="1">

                    <Button
                        android:id="@+id/bot9"
                        android:layout_width="match_parent"
                        android:text=""
                        android:layout_margin="4dp"
                        android:layout_weight="48"
                        android:layout_height="match_parent" />
                    <Button
                        android:id="@+id/bot10"
                        android:layout_width="match_parent"
                        android:text=""
                        android:layout_margin="4dp"
                        android:layout_weight="48"
                        android:layout_height="match_parent" />
                    <Button
                        android:id="@+id/bot11"
                        android:layout_width="match_parent"
                        android:text=""
                        android:layout_margin="4dp"
                        android:layout_weight="48"
                        android:layout_height="match_parent" />
                    <Button
                        android:id="@+id/bot12"
                        android:layout_width="match_parent"
                        android:text=""
                        android:layout_margin="4dp"
                        android:layout_weight="48"
                        android:layout_height="match_parent" />
                    <Button
                        android:id="@+id/bot13"
                        android:layout_width="match_parent"
                        android:text=""
                        android:layout_margin="4dp"
                        android:layout_weight="48"
                        android:layout_height="match_parent" />

                </LinearLayout>


            </TableRow>

        </TableLayout>





    </RelativeLayout>

    <!-- The main content view -->
    <!-- The navigation drawer -->
    <RelativeLayout android:id="@+id/top_drawer"
        android:layout_width="match_parent"
        android:layout_gravity="start"
        android:choiceMode="singleChoice"
        android:divider="@android:color/transparent"
        android:dividerHeight="0dp"
        android:background="#FFF000"
        android:layout_height="wrap_content">

        <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/tableLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <!-- 2 columns -->

            <!-- edittext span 2 column -->
            <TableRow
                android:id="@+id/tableRow1"
                android:layout_width="match_parent"
                android:layout_weight="58"
                android:layout_marginBottom="4dp"
                android:background="#FFFF">
<!--
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:textStyle="bold"
                        android:text="Nome Avversario:"/>

                </LinearLayout>
                -->
            </TableRow>
            <TableRow
                android:id="@+id/tableRow1"
                android:layout_width="match_parent"
                android:layout_weight="58"
                android:layout_marginBottom="4dp"
                android:background="#663300">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <Button
                        android:id="@+id/abb"
                        android:layout_width="match_parent"
                        android:layout_gravity="center"
                        android:text="Abbandona partita"
                        android:layout_height="match_parent" />

                </LinearLayout>
            </TableRow>
        </TableLayout>

    </RelativeLayout>

</android.support.v4.widget.DrawerLayout>